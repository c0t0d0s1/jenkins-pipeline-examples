pipeline {
	agent any
	
	stages {
		stage("Checking Platform Versions") {
			steps {
				sh 'mvn -v'
			}
		}
		
		stage("Deployment Testing") {
			parallel {
				stage("Windows") {
					agent { docker 'openjdk:7-jdk-alpine' }
					steps {
						sh 'uname -a'
					}
				}
				stage("Linux Rhel") {
					agent { docker 'openjdk:8-jdk-alpine' }
					steps {
						sh 'uname -a'
					}
				}
				stage("Linux Debian/Ubuntu") {
					steps {
						sh 'uname -a'
					}
				}
			}
		}
		
		stage("Deploy") {
			steps {
				echo "Deploy!"
			}
		}
	}
}
